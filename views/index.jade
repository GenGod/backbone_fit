html
    head
        title=title
        link(rel='stylesheet', href='css/bootstrap.min.css')
    body
        div.container
            h1.h1.text-primary Оставить комментарий
            form.form-horizontal(method='post', action='/index', name='commentsForm')
                div.form-group
                    label.control-label Введите своё имя
                    input.form-control.input-sm(type='text', name='userName', placeholder='Введите имя...')
                div.form-group
                    label.control-label Тема
                    input.form-control.input-sm(type='text', name='theme', placeholder='Тема')
                div.form-group
                    label.control-label Введите Ваш комментарий
                    input.form-control.input-sm(type='text', name='comment', placeholder='Комментарий...')
                input.btn.btn-success(type='submit', value='Оставить')
            div#comments
            script(src='js/library/jquery.js')
            script(src='js/library/bootstrap.min.js')
            script(data-main='js/init' src='js/library/require.js')
